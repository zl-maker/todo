/* 事项样式 */
.cell-title {
  font-size: 28rpx !important;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.cell-title-finished {
  font-size: 28rpx !important;
  text-decoration: line-through;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.cell-value {
  font-size: 26rpx !important;
}

.cell-value-finished {
  font-size: 26rpx !important;
  text-decoration: line-through;
}

/* 滑动块样式 */
.slot-left {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100%;
  width: 100rpx;
  text-align: center;
  background-color: rgba(250, 82, 82, 0.9);
  color: white;
}

.slot-right {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100%;
  width: 100rpx;
  text-align: center;
  background-color: rgba(64, 192, 87, 0.9);
  color: white;
  z-index: 1000;
}

/* 提示区域 */
.tip1 {
  position: absolute;
  top: 35%;
  left: calc(50vw - 150rpx);
  width: 300rpx;
  height: 300rpx;
}

.tip2 {
  position: absolute;
  top: calc(100vh - 200rpx);
  left: calc(50vw - 210rpx);
  font-size: 40rpx;
  text-align: center;
  width: 420rpx;
}

.icon-arrowDown {
  position: absolute;
  top: calc(100vh - 170rpx);
  left: calc(50vw - 31rpx);
  font-size: 62rpx;
}