/* 截止时间 */
.deadlineContainer {
  margin-top: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.deadlineContainer text {
  font-size: 34rpx;
  animation: twinkling 10s infinite ease-in-out
}

@keyframes twinkling {
  0% {
    opacity: 1;
  }

  25% {
    opacity: 0.5;
  }

  50% {
    opacity: 0;
  }

  75% {
    opacity: 0.5;
  }

  100% {
    opacity: 1;
  }
}

